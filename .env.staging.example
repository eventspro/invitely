# Staging Environment Variables for Vercel Deployment
# For stage.4ever.am deployment

# Copy these environment variables to your Vercel staging project dashboard
# Go to: Project Settings > Environment Variables

# Database Configuration (Use separate staging database)
DATABASE_URL=postgresql://staging_user:staging_password@staging-host/staging_neondb?sslmode=require&channel_binding=require

# Authentication (Use different JWT secret for staging)
JWT_SECRET=staging_jwt_secret_key_here_should_be_different_from_production

# Server Configuration
NODE_ENV=staging
PORT=3000

# Admin Credentials (Different from production for security)
ADMIN_USERNAME=staging_admin
ADMIN_PASSWORD=staging_wedding2025

# Brevo Email Configuration (Use test email settings)
BREVO_API_KEY=your_staging_brevo_api_key_here

# Cloudflare R2 Configuration (Use separate staging bucket)
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_R2_ACCESS_KEY=your_staging_access_key_here
CLOUDFLARE_R2_SECRET_KEY=your_staging_secret_key_here
CLOUDFLARE_R2_BUCKET_NAME=your_staging_bucket_name_here
CLOUDFLARE_R2_PUBLIC_URL=https://your_staging_bucket_public_url.com

# Platform Admin Credentials (Staging-specific)
PLATFORM_ADMIN_USERNAME=staging_platform_admin
PLATFORM_ADMIN_PASSWORD=staging_haruttev2025admin

# Optional: Different analytics/tracking for staging
# GOOGLE_ANALYTICS_ID=staging-ga-id
# MIXPANEL_TOKEN=staging-mixpanel-token

# Debug/Testing flags for staging
DEBUG_MODE=true
ENABLE_TEST_DATA=true